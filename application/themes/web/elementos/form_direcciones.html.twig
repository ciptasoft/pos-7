{% block register %}
	<div class="panel panel-default signup-form"><!--sign up form-->
		<div class="panel-heading">
			{{line('market_register_new_user')}}
		</div>
		<div class="panel-body">
			<form action="{{site_url('web/market/register')}}" id="form-registermarket">
				<div class="alert alert-info errors">
			     </div>
				<div class="form-group">
					<input type="text" class="form-control" name="direccion" placeholder="{{line('market_direccion')}}"/>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="direccion2" placeholder="{{line('market_direccion2')}}"/>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="zip" placeholder="{{line('market_codigo_postal')}}"/>
				</div>
				<div class="row">
					<div class="col-md-6">
						<input type="text" class="form-control" name="pais" placeholder="{{line('common_country')}}"/>
					</div>
					<div class="col-md-6">
						<input type="text" class="form-control"name="provincia" placeholder="{{line('common_state')}}"/>
					</div>
				</div>
				<div class="btn-group btn-group-justified">
					<div class="btn-group">
						<button type="submit" class="btn btn-default">{{line('market_signup')}}</button>
					</div>
				</div>
			</form>
		</div>
	</div><!--/sign up form-->
{% endblock %}