{% extends _layout %}
{% block header %}
    {% include 'partials/header.html.twig' %}
{% endblock %}
{% block content %}
    <div id="page-wrapper">
        {{data}}
        <h3>{{line('common_welcome_message')}}</h3>
        <div class="row">
            {# {% for module in allowed_modules.result if module.grupo=='admin' %} #}
            {% for module in allowed_modules.result %}
                {{ loop.index%4==0 ? '<div class = "row">':''}}
                <div class="col-sm-6 col-md-3">
                    <div class="thumbnail">
                        <a href="{{site_url(module.module_id)}}">
                            <img src="{{base_url() ~ 'images/menubar/' ~ module.module_id ~ '.png'}}" border="0" alt="Menubar Image" /></a>
                        <div class="caption">
                            <h3><a href="{{site_url(module.module_id)}}">{{line("module_" ~ module.module_id)}}</a></h3>
                            <p>{{line('module_' ~ module.module_id ~ '_desc')}}</p>
                        </div>
                    </div>
                </div>
                {{ loop.index%4==0 ? '</div>':'' }}
            {%endfor%}
        </div>
        <h3>{{line('ecommerce')}}</h3>
        <div class="row">
            {% for module in allowed_modules.result if module.grupo=='web' %}
                {{ loop.index%4==0 ? '<div class = "row">':''}}
                <div class="col-sm-6 col-md-3">
                    <div class="thumbnail">
                        <a href="{{site_url(module.module_id)}}">
                            <img src="{{base_url() ~ 'images/menubar/' ~ module.module_id ~ '.png'}}" border="0" alt="Menubar Image" /></a>
                        <div class="caption">
                            <h3><a href="{{site_url(module.module_id)}}">{{line("module_" ~ module.module_id)}}</a></h3>
                            <p>{{line('module_' ~ module.module_id ~ '_desc')}}</p>
                        </div>
                    </div>
                </div>
                {{ loop.index%4==0 ? '</div>':'' }}
            {%endfor%}
        </div>
    </div>
{% endblock %}